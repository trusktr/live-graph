{
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,

		// "declaration": true,
		// "declarationMap": true,
		// "emitDeclarationOnly": true,
		"noEmit": true, // don't emit anything, this is a plain JS app.

		"sourceMap": true,
		"target": "ES2023",
		"module": "ES2022",
		"moduleResolution": "Node",
		"verbatimModuleSyntax": true,

		"lib": ["DOM", "DOM.Iterable", "ES2023"],
		"types": [],

		"skipLibCheck": true,
		"strict": true,
		"noImplicitAny": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true
	},

	"include": ["./**/*.js"], // Plain JS only!
	"exclude": ["node_modules"]
}
